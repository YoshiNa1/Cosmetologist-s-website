                        <!-- Highlights -->
                        <section>
                            <ul class="divided">
                                <li>

                                    <!-- Highlight -->
                                    <article class="box highlight">
                                        <header>
                                            <h3><a href="#">Изучаем состав</a></h3>
                                        </header>
